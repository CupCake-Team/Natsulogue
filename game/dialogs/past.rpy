        "{i}Что скажешь про Юри?{/i}":
            hide screen countdown
            $side_return()

            if "Что скажешь про Юри?" in persistent.repeats and persistent.repeats["Что скажешь про Юри?"] == cur_relation:
                if cur_relation == "Neutral":
